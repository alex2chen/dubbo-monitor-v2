<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="writeDataConsumer" class="com.kxtx.dubbo.monitor.service.dsrpt.consumer.WriteDataConsumer"/>
    <bean id="asynDisruptorBuilder" class="com.kxtx.dubbo.monitor.service.dsrpt.builder.AsynDisruptorBuilder">
        <constructor-arg index="0">
            <bean class="com.kxtx.dubbo.monitor.service.dsrpt.engine.UrlEventFactory"/>
        </constructor-arg>
    </bean>
    <bean id="disruptorEngine" class="com.kxtx.dubbo.monitor.service.dsrpt.engine.DisruptorEngineImpl"
          init-method="init"
          destroy-method="shutdown">
        <constructor-arg index="0" ref="asynDisruptorBuilder">
        </constructor-arg>
        <constructor-arg index="1">
            <list>
                <bean class="com.kxtx.dubbo.monitor.domain.EventHandlerChain">
                    <constructor-arg index="0" ref="writeDataConsumer"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>
</beans>